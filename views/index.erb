<h4>Files in the CMS:</h4>
<ul>
  <% @files.each do |file| %>
    <li>
      <%= file %>
      <div>
        <form class="inline" action="/<%= file %>" method="get">
          <button type="submit">View</button>
        </form>
        <form class="inline" action="/<%= file %>/edit" method="get">
          <button type="submit">Edit</button>
        </form>
        <form class="inline" action="/<%= file %>/delete" method="post">
          <button type="submit">Delete</button>
        </form>
        <form class="inline" action="/<%= file %>/duplicate" method="post">
          <button type="submit">Duplicate</button>
        </form>
      </div>
    </li>
  <% end %>
</ul>

<p>
  <a href="/new">New Document</a>
</p>

<% if session[:username] %>
  <form method="post" action="/users/signout">
    <p class="user-status">
      Signed in as <%= session[:username] %>.
      <button type="submit">Sign Out</button>
    </p>
  </form>
<% else %>
  <p class="user-status"><a href="/users/signin">Sign In</a></p>
  <p class="user-status"><a href="/users/signup">Sign Up</a></p>
<% end %>
